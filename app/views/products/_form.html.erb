<%= form_for @product do |f| %>

	<div class = 'field'>
		<%= f.label :name, "Product Name" %><br />
		<%= f.text_field :name %>
	</div>
	<div class = 'field'>
		<%= f.label :description, "Description" %><br />
		<%= f.text_area :description %>
	</div>
	<div class = 'field'>
		<%= f.label :price_in_cents, "Price in cents" %><br />
		<%= f.text_field :price_in_cents %>
	</div>
	<div class = 'actions'>
		<%= f.submit "Save Product" %>
	</div>
<% end %>